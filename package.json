{
  "name": "uph-be",
  "version": "1.0.0",
  "description": "Challenge to Uphold",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "prestart": "node ./npm-scripts/prestart.js pro && npm i",
    "start": "npm run build && node ./dist/index.js",
    "start-dev": "node ./npm-scripts/prestart.js dev && nodemon ./src/index.ts",
    "start-pro": "node ./npm-scripts/prestart.js pro && nodemon ./src/index.ts",
    "build": "tsc --skipLibCheck",
    "test": "jest --passWithNoTests",
    "eslint": "eslint './src/**/*.ts'",
    "eslint:fix": "eslint --fix './src/**/*.ts'",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prepack": "node ./npm-scripts/prestart.js pro && tsc",
    "pack": "pkg .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Beny1912/uph-be.git"
  },
  "author": "Beny Pe√±a",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Beny1912/uph-be/issues"
  },
  "homepage": "https://github.com/Beny1912/uph-be#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.5"
  },
  "pkg": {
    "targets": [
      "node17-win-x64",
      "node17-macos-x64",
      "node17-linux-arm64"
    ],
    "assets": [
      ".env",
      "./dist/**/*",
      "./libs/**/*",
      "./node_modules/**/*"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "libs",
      "node_modules",
      "./__tests__/db"
    ],
    "roots": [
      "./__tests__"
    ],
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
